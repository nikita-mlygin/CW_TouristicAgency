<UserControl x:Class="NCourseWork.Common.Layouts.Navigation.NavigationLayoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NCourseWork.Common.Layouts.Navigation" d:DataContext="{d:DesignInstance Type=local:NavigationLayout}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel VerticalAlignment="Center">
            <RadioButton Content="Client" Command="{Binding NavigateToClientCommand}" />
            <RadioButton Content="Country" Command="{Binding NavigateToCountryCommand}" />
            <RadioButton Content="Hotel" Command="{Binding NavigateToHotelCommand}" />
            <RadioButton Content="Tour" Command="{Binding NavigateToTourCommand}" />
            <RadioButton Content="Purchase" Command="{Binding NavigateToPurchaseCommand}" />
        </StackPanel>
        
        <ContentControl Grid.Column="1" Content="{Binding Current}" />
    </Grid>
</UserControl>
